#! /bin/bash
#
# Run at the beginning of the month via cron, out of dak's crontab.

set -e
set -o pipefail
set -u
export SCRIPTVARS=/srv/ftp-master.debian.org/dak/config/debian/vars
. $SCRIPTVARS

################################################################################

DATE=`date -d yesterday +%y%m`

cd ${base}/mail/archive
for m in mail bxamail; do
    if [ -f $m ]; then
        mv $m ${m}-$DATE
        touch ${m}
        chown dak:ftpteam ${m}
        chmod 660 ${m}
        sleep 20
        xz -9 ${m}-$DATE
        chgrp $ftpgroup ${m}-$DATE.xz
        chmod 660 ${m}-$DATE.xz
    fi;
done

DATE=$(date +%Y-%m)
cd ${base}/log
touch $DATE
ln -sf $DATE current
chmod g+w $DATE
chown dak:ftpteam $DATE

DATE=$(date -d yesterday +$Y-%m)
cd /srv/upload.debian.org/queued
/srv/upload.debian.org/queued/debianqueued -k || true
mv log log.${DATE}
touch log
xz -9 log.${DATE}
/srv/upload.debian.org/queued/debianqueued 2>/dev/null

################################################################################
